<h1>
  Which employee would you like to delete?
</h1>

<form action="/delete_employee_confirm">
  <table>
    <% Employee.all.each do |x| %>
      <tr>
        <td>
          <label for="<%= x.id %>">
          <input type="radio" name="id" value="<%= x.id%>" id="<%= x.id %>"><%= x.name%>
        </td>
        <td>
          <%= x.age %>
        </td>
      </tr>
    <% end %>
  </table>
  <br>
  <br>
  <input type="submit">
</form>