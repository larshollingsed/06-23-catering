<h1>
  All Distributions
</h1>

<table>
  <tr>
    <td>
      Employee
    </td>
    <td>
      Event
    </td>
    <td>
      Date
    </td>
    <td>
      Manager?
    </td>
  </tr>
  <% @table.each do |x| %>
    <tr>
      <td>
        <%= x["name"] %>
      </td>
      <td>
        <%= x["event_name"] %>
      </td>
      <td>
        <%= x["date"] %>
      </td>
      <td>
        <%= x["manager"] %>
      </td>
    </tr>
  <% end %>
</table>
<br>
<br>
<h3>
  All Employee Earnings
</h3>
<table>
  <tr>
    <td>
      Name
    </td>
    <td>
      Manager Wages
    </td>
    <td>
      Non-Manager Wages
    </td>
    <td>
      Total Earnings
    </td>
  </tr>
  <% Employee.all.each do |x| %>
    <tr>
      <td>
        <%= x.name %>
      </td>
      <td>
        <%= sprintf('%.2f', x.get_manager_wages) %>
      </td>
      <td>
        <%= sprintf('%.2f', x.get_base_wages) %>
      </td>
      <td>
        <%= sprintf('%.2f', x.get_total_wages) %>
      </td>
    </tr>
  <% end %>
</table>
