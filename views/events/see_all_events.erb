<h1>
  All Events
</h1>

<table id="events">
  <tr>
    <th>
      Name
    </th>
    <th>
      Date
    </th>
    <th>
      Hours
    </th>
    <th>
      Hourly Wage
    </th>
    <th>
      Gratuity
    </th>
    <th>
      Was alcohol served?
    </th>
  </tr>
  <% Event.all.each do |x| %>
    <tr>
      <td>
        <%= x.name %>
      </td>
      <td>
        <%= x.date %>
      </td>
      <td>
        <%= x.hours %>
      </td>
      <td>
        <%= x.hourly_wage %>
      </td>
      <td>
        <%= x.gratuity %>
      </td>
      <td>
        <% if x.alcohol == "yes"%>
          Yes
        <% else %>
          No
        <% end %>
      </td>
    </tr>
  <% end %>
</table>