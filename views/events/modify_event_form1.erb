<h1>
  Which event would you like to modify?
</h1>

<table id="events">
  <tr>
    <th>
      Name
    </th>
    <th>
      Date
    </th>
    <th>
      Hours
    </th>
    <th>
      Hourly Wage
    </th>
    <th>
      Gratuity
    </th>
    <th>
      Was alcohol served?
    </th>
  </tr>
  <form action="/modify_event_form2">
    <% Event.all.each do |x| %>
      <tr>
        <td>
          <label for="<%= x.id %>">
          <input type="radio" value="<%= x.id %>" id="<%= x.id %>" name="event[id]">
          <%= x.name %>
        </td>
        <td>
          <%= x.date %>
        </td>
        <td>
          <%= x.hours %>
        </td>
        <td>
          <%= x.hourly_wage %>
        </td>
        <td>
          <%= x.gratuity %>
        </td>
        <td>
          <% if x.alcohol == "yes" %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
      </tr>
    <% end %>
</table>
<p class="center">
  <input type="submit">
</p>
</form>